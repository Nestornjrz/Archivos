<div class="row">
    <div class="col-md-5">
        <div class="panel panel-primary">
            <div class="panel-heading">Cargar lugar</div>
            <div class="panel-body">
                <form class="form-horizontal" role="form" ng-controller="lugaresCtrl as vm" name="lugaresForm" ng-cloak>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="nombreLugar" class="col-md-5 control-label">Lugar</label>
                            <div class="col-md-7">
                                <input type="text" class="form-control" ng-model="vm.lugare.nombreLugar" name="nombreLugar" ng-required="true">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <button ng-click="vm.guardar()" ng-disabled="lugaresForm.$invalid" class="btn btn-default">
                                    <span ng-show="vm.lugare.lugarID == null">Cargar</span>
                                    <span ng-show="vm.lugare.lugarID != null">Editar Lugar ID: {{vm.lugar.lugarID}}</span>
                                </button>
                                <button ng-click="vm.nuevoParaCargar()" class="btn btn-default">
                                    Nuevo
                                </button>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="panel panel-default">
                                <div class="panel-heading">Aviso</div>
                                <div class="panel-body">
                                    {{vm.mensajeDelServidor}}
                                </div>
                            </div>
                        </div>
                    </div>
                    @*<pre>{{vm.lugar | json}}</pre>*@
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-7">
        <h2 class="text-center">Listado de las lugares</h2>
        <div class="row" ng-controller="listadoLugaresCtrl as vm" ng-cloak style="margin-top:25px;">
            <div class="col-md-8 col-md-offset-2">
                <table class="table table-bordered table-hover table-striped table-condensed">
                    <thead>
                        <tr>
                            <th colspan="2">Acciones</th>
                            <th>ID</th>
                            <th>Nombre</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="o in vm.lugares">
                            <td><button title="Actualizar" class="btn btn-warning btn-sm" ng-click="vm.actualizar(o)"> <i class="glyphicon glyphicon-edit" /></button></td>
                            <td><button title="Eliminar" class="btn btn-danger btn-sm" ng-click="vm.eliminar(o)"><i class=" glyphicon glyphicon-remove" /></button></td>
                            <td>{{o.lugarID}}</td>
                            <td>{{o.nombreLugar}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            @*<pre>
            {{vm.usuarios | json}}
            </pre>*@
        </div>
    </div>
</div>
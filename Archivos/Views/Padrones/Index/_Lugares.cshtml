<div class="row">
    <div class="col-md-5">
        <div class="panel panel-primary">
            <div class="panel-heading">Cargar lugar</div>
            <div class="panel-body">
                <form class="form-horizontal" role="form" ng-controller="lugaresCtrl as vm" name="lugaresForm" ng-cloak>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="nombreLugar" class="col-md-5 control-label">Lugar</label>
                            <div class="col-md-7">
                                <input type="text" class="form-control" ng-model="vm.lugar.nombreLugar" name="nombreLugar" ng-required="true">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <button ng-click="vm.guardar()" ng-disabled="lugaresForm.$invalid" class="btn btn-default">
                                    <span ng-show="vm.lugar.lugarID == null">Cargar</span>
                                    <span ng-show="vm.lugar.lugarID != null">Editar Lugar ID: {{vm.lugar.lugarID}}</span>
                                </button>
                                <button ng-click="vm.nuevoParaCargar()" class="btn btn-default">
                                    Nuevo
                                </button>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="panel panel-default">
                                <div class="panel-heading">Aviso</div>
                                <div class="panel-body">
                                    {{vm.mensajeDelServidor}}
                                </div>
                            </div>
                        </div>
                    </div>
                    @*<pre>{{vm.lugar | json}}</pre>*@
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-7">

    </div>
</div>